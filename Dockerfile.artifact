FROM python:3.11-slim-buster

MAINTAINER Flyte Team <users@flyte.org>
LABEL org.opencontainers.image.source https://github.com/flyteorg/flytekit

WORKDIR /root
ENV PYTHONPATH /root

RUN apt-get update && apt-get install build-essential git curl -y

RUN pip install flytekitplugins-deck-standard==1.8.0 rich marshmallow_enum
RUN pip install --no-deps -U --force-reinstall "git+https://github.com/flyteorg/flytekit.git@845a23d96442db2d240c12446b3d0e22ed786295"
RUN pip install --no-deps -U --force-reinstall "git+https://github.com/flyteorg/flyteidl.git@628e84e1cc5c8a6573740c4c6806d5fc50016430"
